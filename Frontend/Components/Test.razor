@using MudBlazor
@inject ILogger<Test> Logger

<DialogContent>
    <MudText Typo="Typo.subtitle1">
        Isto é um diálogo simples.
    </MudText>
</DialogContent>

<DialogActions>
    <MudButton OnClick="Cancel">Cancelar</MudButton>
    <MudButton Variant="Variant.Filled" OnClick="Submit">Aceitar</MudButton>
</DialogActions>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; }

    void Submit()
    {
        Logger.LogInformation("Botão Aceitar premido");
        MudDialog.Close(DialogResult.Ok("Olá do diálogo!"));
    }

    void Cancel()
    {
        Logger.LogInformation("Botão Cancelar premido");
        MudDialog.Cancel();
    }
}